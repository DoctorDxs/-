.qingful-card{
	margin-top:20rpx;
	margin-bottom:20rpx;
	margin-right:50rpx;
	margin-left:50rpx;
	height:390rpx;
	border-radius:16rpx;
}
.qingful-card-bg{
	width:100%;
	height:215rpx;
	position:relative;

}
.qingful-card-top{
	height:175rpx;
	display:flex;
}
.qingful-card-img-view{
	width:88rpx;
	height:88rpx;
	margin-top:42rpx;
	margin-left:40rpx;
}
.qingful-card-avater-view{
    width:400rpx;
	display:inline-flex;
}
.qingful-card-right{
	flex:1;
}
.qingful-card-avater{
	width:88rpx;
	height:88rpx;
	border-radius:50%;
	border:2px solid #fff;
}
.qingful-top-text{
	color:#fff;
	margin-left:20rpx;
	overflow:hidden;
}
.qingful-card-wxa-name{
	font-size:30rpx;
	display:block;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
}

.qingful-card-wxa-detail{
	font-size:24rpx;
	display:block;
	margin-top:-28rpx;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
}
.qingful-card-right text{
	margin-top:50rpx;
	margin-left:40rpx;
	border:2rpx solid #fff;
	color:#fff;
	font-size:24rpx;
	text-align:center;
	border-radius:6rpx;
	display:block;
	width:155rpx;
	height:54rpx;
	line-height:54rpx;
}
.qingful-card-number{
	position:absolute;
	bottom:48rpx;
	margin-left:40rpx;
	color:#fff;
	font-size:36rpx;

}


