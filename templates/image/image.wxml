<template name='image'>
  <image class='image-style' style='top:{{top*2}}rpx;left:{{left*2}}rpx;width:{{width*2}}rpx;height:{{height*2}}rpx;position:{{position?position:"absolute"}};bgColor:{{bgColor}};transform:{{rotate}};opacity:{{opacity}};border-radius:{{border_radius}};border:{{border}}' src='{{src}}' bindtap='onClick' data-click='{{click_type}}' data-skippath='{{skip_path}}'></image>
</template>
